mixin reviewOpen()
	a.review-open.video-open(tabindex="0")&attributes(attributes)
		picture.review-open__picture
			source(media="(min-width: 2500px)", srcset="images/content/review-client@3x.webp", type="image/webp")
			source(media="(min-width: 2500px)", srcset="images/content/review-client@3x.jpg")
			source(srcset="images/content/review-client@2x.webp", type="image/webp")
			img(src="images/content/review-client@2x.jpg", alt="Фото клиента")
		span.review-open__text
			b Our customers
			b live-reviews
