mixin serviceCard(props)
	- const { title, description, more, background } = props;

	div.service-card&attributes(attributes)
		h3.service-card__title
			a(href="index.html")!= title
		p.service-card__description!= description
		span.service-card__more!= more
		picture.service-card__background(aria-hidden="true")
			source(media="(min-width: 2600px)", srcset=`images/content/${background}@3x.webp`, type="image/webp")
			source(media="(min-width: 1300px)", srcset=`images/content/${background}@2x.webp`, type="image/webp")
			source(media="(min-width: 2600px)", srcset=`images/content/${background}@3x.jpg`)
			source(media="(min-width: 1300px)", srcset=`images/content/${background}@2x.jpg`)
			source(srcset=`images/content/${background}.webp`, type="image/webp")
			img(src=`images/content/${background}.jpg`, alt="Фон")
