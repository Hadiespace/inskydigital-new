include ../crumb

mixin servicePreview(props)
	- const { title, crumb, subTitle, background } = props;

	div.service-preview.section
		div.service-preview__container.container
			div.service-preview__wrapper
				//- хлебные крошки
				div.service-preview__crumbs.crumbs
					+crumb('Home', 'index.html')
					+crumb('Услуги', 'index.html')
					+crumb(crumb)
				h1.service-preview__title.title!= title
				p.service-preview__sub-title!= subTitle
